<view class="text-container" bindtap="search" data-value="{{text}}">
  <view class="delete-back" style="display: {{canDelete ? 'block': 'none'}};" bindtap="deleteText">
    <view class="delete-flag"></view>
  </view>

  <view class="text-content" bindtap="search">
    <text>{{text}}</text>
  </view>
</view>
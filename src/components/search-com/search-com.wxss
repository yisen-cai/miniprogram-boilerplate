.search-com {
  width: 600rpx;
  height: 104rpx;
  border-radius: 50rpx;
  display: inline-flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 0 30rpx 0 lightgray;
  background: white;
  padding: 0 20rpx;
}

.pressed {
  box-shadow: 0 0 10rpx 0 lightgray;
}

.search-icon {
  width: 44rpx;
  height: 44rpx;

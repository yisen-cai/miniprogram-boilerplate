.comment-input {
  background: white;
  border-radius: 50rpx;
  width: 400rpx;
  height: 80rpx;
  padding: 10rpx 40rpx;
  font-size: 14pt;
  box-shadow: 0 10rpx 10rpx 0 lightgray;
}


.add-action {
  width: 100rpx;
  text-align: center;
  background: #85ee8d;
  padding: 20rpx;
  box-shadow: 0 10rpx 10rpx 0 lightgray;
  border-radius: 5rpx;
  color: white;
}


.add-action-pressed {
  color: whitesmoke;
  background: #75d37d;
}


.comment-actions {
  display: inline-flex;
  align-items: center;
  width: 100%;
  justify-content: space-between;
}
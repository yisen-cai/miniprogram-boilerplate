/* components/test-com/test-com.wxss */
.test-container {
  width: 640rpx;
  height: 480rpx;
  display: inline-flex;
  align-items: center;
}

.test-com {
  width: 640rpx;
  height: 480rpx;
  margin: auto;
  border-radius: 40rpx;
  background-repeat: no-repeat;
  box-shadow: 0 0 30rpx 0 lightgray;
  background-size: cover;
  display: flex;
  flex-direction: column-reverse;
}

.pressed {
  width: 640rpx;
  height: 480rpx;
  animation-name: test-com-frames;
  animation-duration: .5s;
  animation-timing-function: linear;
}

.test-name {
  font-size: 30rpx;
  z-index: 10;
  font-family: Serif;
  left: 30rpx;
  position: relative;
}

.text-back {
  display: flex;
  align-items: center;
  backdrop-filter: blur(20rpx);
  /* bottom: -29px; */
  /* position: relative; */
  /* left: 1; */
  justify-content: flex-start;
  height: 20%;
  width: 100%;
  border-radius: 0 0 40rpx 40rpx;
}

@keyframes test-com-frames {
  0% {
    width: 640rpx;
    height: 480rpx;
    box-shadow: 0 0 30rpx 0 lightgray;
  }
  50% {
    width: 600rpx;
    height: 450rpx;
    box-shadow: 0 0 10rpx 0 lightgray;
  }
  100% {
    width: 640rpx;
    height: 480rpx;
    box-shadow: 0 0 30rpx 0 lightgray;
  }
}
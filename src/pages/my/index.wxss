.edits {
  height: 100%;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.edit-user {
  border-radius: 30rpx;
  background: white;
  padding: 10px;
  box-shadow: 0 0 10rpx 0 lightgray;
}


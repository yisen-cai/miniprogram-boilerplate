  font-family: serif;
  font-size: 18px;
  background-color: none !important;
}

.tab-bar-title__selected {
  font-weight: bold;
  font-size: 18px;
  border-bottom-color: #007FFF !important;
}

.search-histories {
  padding: 32rpx 20rpx 0 20rpx;
  width: 640rpx;
}

.texts {
  display: inline-flex;
  align-items: center;
  width: 640rpx;
  flex-wrap: wrap;
  justify-content: flex-start;
}


.search-suggestions {
  padding: 32rpx 20rpx;
  width: 640rpx;
}


.suggestions {
  margin-top: 25rpx;

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 28rpx 0;

}

.tab-bar-title__selected {
  font-size: 20px;
  font-weight: bold;
}

.search-tab {
  width: 100%;
}


.weui-tabs {
  margin-top: 28rpx;
}


.weui-tabs-bar__wrp {
  white-space: nowrap;
  display: inline-flex;
  align-items: center;
  position: relative;
  left: 55rpx;
  justify-content: flex-start;
